#!/usr/bin/make -f

RELEASE_PACKAGE=libsim

%:
	dh $@ --with=fortran_mod --no-parallel

override_dh_auto_configure:
	dh_auto_configure -- \
	       --disable-ngmath --disable-ncarg \
	       --enable-alchimia --enable-shapelib \
	       --enable-netcdf --enable-gribapi --enable-gdal \
	       --enable-f2003-features --enable-f2003-extended-features

override_dh_auto_test:

override_dh_auto_install:
	dh_auto_install
	rm -f debian/libsim/usr/bin/dba_qcfilter
